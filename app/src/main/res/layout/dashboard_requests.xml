<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:backgroundTint="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/navBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_marginTop="2dp"
        android:background="@drawable/nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/header_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmBuy"
        android:layout_width="206dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcome_text"
        android:textColor="@color/secondary"
        android:textSize="@dimen/main_topic"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerBackground"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/profitBackground"
        android:layout_width="278dp"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/profit_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmBuy" />

    <TextView
        android:id="@+id/profitTxt"
        android:layout_width="233dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/profit_txt"
        android:textColor="@color/background"
        android:textSize="@dimen/small_text"
        app:layout_constraintEnd_toEndOf="@+id/profitBackground"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/profitBackground"
        app:layout_constraintTop_toTopOf="@+id/profitBackground"
        tools:ignore="TextSizeCheck,TextViewEdits,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/edtProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/expected_profit"
        android:textColor="@color/background"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/profitBackground"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="@+id/profitBackground"
        app:layout_constraintTop_toBottomOf="@+id/profitTxt" />

    <Button
        android:id="@+id/edtPosted"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/background"
        android:text="@string/posted_tab"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/edtRequests"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground"
        app:strokeColor="@color/primary"
        app:strokeWidth="@dimen/stroke_width" />

    <Button
        android:id="@+id/edtRequests"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/primary"
        android:text="@string/requests_tab"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtPosted"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        tools:ignore="TextSizeCheck" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/navBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/menu2"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/homeIcon2"
        app:layout_constraintStart_toStartOf="@+id/navBackground"
        app:srcCompat="@drawable/menu"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/vehicleIcon2"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/navBackground"
        app:layout_constraintStart_toEndOf="@+id/homeIcon2"
        app:srcCompat="@drawable/vehicle"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/homeIcon2"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/navBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/navBackground"
        app:srcCompat="@drawable/home"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.fuelbuddy.RequestFragment"
        android:layout_width="0dp"
        android:layout_height="486dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/navBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtRequests"
        tools:layout="@layout/requests_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>

